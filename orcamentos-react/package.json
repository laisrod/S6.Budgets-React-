{
  "name": "orcamentos-react",
  "version": "1.0.0",
  "description": "Aplicação de orçamentos de serviços digitais desenvolvida com React e TypeScript",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
